
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<form method="post" action="~/employees/create">
    Name: <input type="text" name="name" placeholder="Employee's Name" />
    Surname: <input type="text" name="surname" placeholder="Employee's Surname" />
    Job Position <input type="text" name="jobposition" placeholder="Role?" />
    <div>
        <input type="submit" class="btn btn-default" value="Create" />
    </div>
    <h2>Employees Name:@ViewBag.Name</h2>
    <h2>Employees Surname:@ViewBag.Surname</h2>
    <h2>Employees Position:@ViewBag.JobPosition</h2>
</form>

