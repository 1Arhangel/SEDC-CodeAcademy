@model List<string>
@{
    ViewBag.Title = "Exercise";
}

<h2>Exercise</h2>
<div>

    @for (int i= 0; i < Model.Count; i++ )
    {
        var item = Model[i];
        var number = i+1;

        if (AddColor(number))
        {
        <p class="@Colorize(number)">@item</p>
        }
        else
        {
        <p class="@Colorize(number)">@item</p>
        }
    }
</div>

@functions{
    public bool AddColor(int i)
    {
        if(i % 2 == 0)
        {
            return true;

        }
        else
        {
            return false;
        }
    }

    public string Colorize(int number)
    {
        return number % 2 == 0 ? "even" : "odd";
    }
}
